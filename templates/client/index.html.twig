{% extends 'base.html.twig' %}

{% block title %}Client index{% endblock %}

{% block body %}
    <div class="app-title">
        <div>
            <h1><i class="fa fa-th-list"></i>Список клиентов</h1>
            <p>Table to display analytical data effectively</p>
        </div>
        <ul class="app-breadcrumb breadcrumb side">
            <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
            <li class="breadcrumb-item">Tables</li>
            <li class="breadcrumb-item active"><a href="#">Data Table</a></li>
        </ul>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="tile">
                <div class="tile-body">
                    <table class="table table-hover table-bordered" id="sampleTable">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>actions</th>
                                <th>Name</th>
                                <th>Tail</th>
                                <th>Phone</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for client in clients %}
                            <tr>
                                <td>{{ client.id }}</td>
                                <td>
                                    <a href="{{ path('client_edit', {'id': client.id}) }}"><i class="fa
                                    fa-pencil-square-o" aria-hidden="true"></i></a>
                                </td>
                                <td>
                                    <a href="{{ path('client_show', {'id': client.id}) }}">{{ client.name }}</a>
                                    {% for tour in client.tours %}
                                        <span class="badge badge-info">{{ tour.name }}</span>
                                    {% endfor %}
                                </td>
                                <td>{{ client.tail }}</td>
                                <td>{{ client.phone }}</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript" src="{{ asset('js/plugins/jquery.dataTables.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/plugins/dataTables.bootstrap.min.js') }}"></script>
    <script type="text/javascript">$('#sampleTable').DataTable();</script>

    <a href="{{ path('client_new') }}">Create new</a>
{% endblock %}