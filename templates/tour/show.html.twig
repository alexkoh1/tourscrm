{% extends 'base.html.twig' %}

{% block title %}Tour{% endblock %}

{% block body %}
    <h1>Tour</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tour.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ tour.name }}</td>
            </tr>
